/* pages/question/index.wxss */



.posts{
  width: 100vw;
  display: flex;
  align-content: flex-start;
  flex-flow: column wrap;
  
}
.post-text{
  border-left-style: solid;
  border-left-color: #005da0;
  margin:14rpx 0rpx 30rpx 50rpx;
  font-size: 40rpx;
  padding-left: 10rpx;
}
.post-text-line{
  width: 600rpx;
  height: 3rpx;
  margin: 28rpx 0rpx ;
  background: #3e4447;
  opacity: 0.3;
}
.post{
  font-size: 28rpx;
  padding:0rpx 60rpx;
}
.post-title{
  margin: 10rpx 0rpx;
  width: 100%;
  color: #3e4447;
  font-weight: bold;
}
.post-content{
  font-size: 28rpx;
  color: gray;
}

.container {
  width: 100vw;
  display: flex; 
  flex-wrap:wrap;
  align-content:flex-start;
  justify-content: center;
  font-size: 30rpx;
} 
.no-more{
  margin:20rpx 0 40rpx 0;
  color: #6f7679;
}