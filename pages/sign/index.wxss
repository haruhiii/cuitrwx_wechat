/* pages/sign/index.wxss */
.swiper{
  width: 750rpx;
  height: 90vh;
}
.swiper-image{
  height: 80vh;
  width: 100%;
  background: rgb(248, 245, 245);
}
.swiper-container{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  flex-direction: column;
  
}
.name{
  font-size: 28rpx;
  margin: 20rpx;
  color: white;
  height: 105rpx;
}
.summary{
  padding: 0 30rpx;
  font-size: 31rpx;

}
.target{
  margin: 20rpx 4rpx;

}
.target-text{
  font-size: larger;
  margin: 10rpx 0;
  font-weight: bold;
}
.target-content{

}
.scroll-container{
   height: 90vh;
   display: flex;
   flex-wrap: wrap;
   align-items: center;
   align-content: center;
}
.button-container{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  flex-direction: row;
  height: 10vh;
}
.sign{
  background-color: #005da0;
  color: white;
}
.background{
  position: absolute;
  background: -webkit-linear-gradient(#005da0,#036bb6);
  border-radius: 0 0 50% 50%;
  height: 105rpx;
  width: 1500rpx;
  z-index: -1;
} 
.container {
  width: 100vw;
  display: flex; 
  flex-wrap:wrap;
  align-content:flex-start;
  justify-content: center;
  font-size: 30rpx;
} 