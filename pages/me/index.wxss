.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.user-propertie{
  margin: 10rpx 20rpx;
}
.user-value{
  margin: 5rpx 10rpx;
  padding: 5rpx 10rpx;
}
.userinfo-container{
  display: flex;
  justify-content: space-between;
}
.update-btn{
  width: 80vw;
  color: white;
  background-color: #036bb6;
  margin: 40rpx;
}
.login-btn{
  color: white;
  background-color: #036bb6;
}