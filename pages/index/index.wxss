
.container {
  width: 100vw;
  display: flex; 
  flex-wrap:wrap;
  align-content:flex-start;
  justify-content: center;
  font-size: 30rpx;
} 
.background{
  position: absolute;
  background: -webkit-linear-gradient(#005da0,#036bb6);
  border-radius: 0 0 50% 50%;
  height: 425rpx;
  width: 1500rpx;
  z-index: -1;
} 

.notice-background1{
  position: absolute;
  top: 630rpx;
  background: -webkit-linear-gradient(#c3e0f5,#cbe6fa);
  border-radius: 100% 20% 100% 100% ;
  height: 120rpx;
  opacity: 0.9;
  width: 1750rpx;
  z-index: -1;
}

.notice-background2{
  position: absolute;
  top: 630rpx;
  background: -webkit-linear-gradient(#d5e6f3,#ddeaf3);
  border-radius: 10% 100% 10% 100%;
  height: 120rpx;
  width: 1750rpx;
  opacity: 0.9;
  z-index: -1;
}

.notice-background3{
  position: absolute;
  top: 630rpx;
  background: -webkit-linear-gradient(#e5f1fa,#d0eafc);
  height: 120rpx;
  width: 750rpx;
  opacity: 0.9;
  z-index: -2;
}

.notice{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  width: 750rpx;
}
.notice-text{
  height: 60rpx;
  width: 120rpx;
  border-left: #005da0 10rpx;
  border-left-style: solid ;
  border-radius: 10rpx;
  font-size: 40rpx;
}
.notice-content{
  height: 80rpx;
  width: 50%;
  }
