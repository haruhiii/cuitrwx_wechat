.title-containner{
  width: 750rpx;
  height: 140rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding: 40rpx;
}
.title-discribe{
  color: #005da0;
  font-size: 30rpx;
  width: fit-content;
  padding: 3rpx;
  background:#FFF;
}
.title-content{
  color: #FFF;
  font-size: 70rpx;
}
.swiper{
  width: 750rpx;
  height: 285rpx;
}
.swiper-image{
  width: 100%;
  background: rgb(248, 245, 245);
}
.swiper-image-container{
  height: 100%;
  margin: 0rpx 40rpx ;
  border-radius:12rpx;
  overflow: hidden;
  
}


.toolkits{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0rpx 40rpx 60rpx;
}

.toolkit-item{
  width: 46vw;
  display: flex;
  flex-wrap: wrap;

}
.toolkit-image{
  width: 100rpx;
  margin:10rpx 20rpx 10rpx 0;
}
.toolkit-text-containner{
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  width: 26vw;
}
.toolkit-text{
  width: 32vw;
}
.toolkit-discription{
  color: #6f7679;
  width: 32vw;
  font-size: 24rpx;
}





.posts{
  width: 100vw;
  display: flex;
  align-content: flex-start;
  flex-flow: column wrap;
  
}
.post-text{
  border-left-style: solid;
  border-left-color: #005da0;
  margin:14rpx 0rpx 30rpx 50rpx;
  font-size: 40rpx;
  padding-left: 10rpx;
}
.post-text-line{
  width: 600rpx;
  height: 3rpx;
  margin: 28rpx 0rpx ;
  background: #3e4447;
  opacity: 0.3;
}
.post{
  font-size: 28rpx;
  padding:0rpx 60rpx;
}
.post-title{
  margin: 10rpx 0rpx;
  width: 100%;
  color: #3e4447;
  font-weight: bold;
}
.post-content{
  font-size: 28rpx;
  color: gray;
}





.question-container{
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
}
.question{
  width: 100%;
  padding: 1em 1em;
  height: 1em;
  display: flex;
}
.question-title{
  width: 80%;
}
.question-image{
  width: 10%;
  height: 2em;
}

.no-more{
  margin:20rpx 0 40rpx 0;
  color: #6f7679;
}